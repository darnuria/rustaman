<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="rustaman-dark" _name="Rustaman Dark" version="1.0">
  <author>Guillaume Gauvrit</author>
  <_description>Default theme for Rustaman</_description>

  <color name="background"         value="#1e2223"/>
  <color name="alt-background"     value="#30393e"/>
  <color name="background-pattern" value="#19343c"/>
  <color name="current-line"       value="#1c2a35"/>
  <color name="line-numbers"       value="#1d272d"/>
  <color name="selection"          value="#93872d"/>
  <color name="alt-selection"      value="#7c5034"/>
  <color name="foreground"         value="#91a1a1"/>
  <color name="light-gray"         value="#9090a5"/>

  <color name="yellow"             value="#B58900"/>
  <color name="orange"             value="#c17616"/>
  <color name="red"                value="#DC322F"/>
  <color name="magenta"            value="#C586C0"/>
  <color name="violet"             value="#897ab6"/>
  <color name="blue"               value="#268BD2"/>
  <color name="cyan"               value="#3a99ac"/>
  <color name="green"              value="#7AC234"/>
  <color name="dark-green"         value="#4E9A00"/>


  <!-- Global Settings 
  https://developer.gnome.org/gtksourceview/stable/style-reference.html
  -->
  <style name="text"                        foreground="foreground" background="background"/>
  <style name="selection"                   foreground="background" background="selection"/>
  <style name="selection-unfocused"         background="alt-selection"/>
  <style name="cursor"                      foreground="foreground"/>
  <style name="secondary-cursor"            foreground="selection-unfocused"/>
  <style name="current-line"                background="current-line"/>
  <style name="line-numbers"                foreground="light-gray" background="line-numbers"/>
  <style name="background-pattern"          background="background-pattern"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="light-gray" background="alt-background"/>
  <style name="bracket-mismatch"            foreground="red"        background="alt-background"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="light-gray" background="foreground"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="background" background="yellow"/>

  <style name="rustaman-request:http-method"         foreground="yellow" />
  <style name="rustaman-request:url"                 foreground="cyan" />
  <style name="rustaman-request:http-version"        foreground="yellow" />
  <style name="rustaman-request:template-var"        foreground="violet" />
  <style name="rustaman-request:template-helper"     foreground="orange" />

  <style name="rustaman-request:map-key"             foreground="green"/>

  <style name="rustaman-request:preprocessor"        foreground="magenta"/>
  <style name="rustaman-request:preprocessor-danger" foreground="red"/>

  <style name="def:comment"                          foreground="dark-green"/>

  <!-- json has been override to be yaml style too -->
  <style name="yaml:anchor"                          foreground="cyan"/>
  <style name="yaml:scalar"                          foreground="cyan"/>
  <style name="yaml:string"                          foreground="blue"/>
  <style name="yaml:tag"                             foreground="violet"/>
  <style name="yaml:alias"                           foreground="violet"/>
  <style name="yaml:map-key"                         foreground="green"/>
  <style name="yaml:directive"                       foreground="cyan"/>
  <style name="yaml:null"                            foreground="magenta"/>
  <style name="yaml:bool"                            foreground="orange"/>
  <style name="yaml:int"                             foreground="orange"/>
  <style name="yaml:float"                           foreground="orange"/>

</style-scheme>
